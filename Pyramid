#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n,i,spc,star;
    scanf("%d",&n);
    for(i=0;i<n;i++){
        for(spc=n;spc>i;spc--){
            printf(" ");
        }
        for(star=0;star<=i;star++){
            printf("**");
        }
        printf("\n");
    }
    for(i=n;i>0;i--){
        for(spc=n;spc>=i;spc--){
            printf(" ");
        }
        for(star=0;star<i;star++){
            printf("**");
        }
        printf("\n");
    }

}
